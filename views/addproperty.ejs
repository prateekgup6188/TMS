<%- include("./partials/header") %>
    <div class="container">
        <div class="row">
            <div class ="col-md-12 text-center">
                <h1>Add Property</h1>
            </div>
            <div style="width:30%; margin:30px auto;">
                <form action="/owner/addProperty/<%=owner_id%>" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="property[room]" placeholder="Total Rooms">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="property[address]"  placeholder="Address">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="property[image]"  placeholder="Image Url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="property[rent]" placeholder="Rent">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-info btn-block">Submit</button>
                    </div>
                </form>
                <a class="btn btn-primary" href="/owner/<%= owner_id %>">Back</a>
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>
