<%- include("./partials/footer") %>
    <div class="container">
        <div class="row">
            <div class ="col-md-12 text-center">
                <h1>Add Property</h1>
            </div>
            <div style="width:30%; margin:30px auto;">
                <form action="/addproperty/<%=currentowner._id%>" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="number" name="Property[rooms]" placeholder="Total Rooms">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Property[status]" placeholder="Vacant/Full">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Property[address]"  placeholder="Address">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="Property[rent]" placeholder="Rent">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-info btn-block">Submit</button>
                    </div>
                </form>
                <a class="btn btn-primary" href="/owner">Back</a>
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>
