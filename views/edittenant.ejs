<%- include("./partials/header") %>
    <div class="container">
        <div class="row">
            <div class ="col-md-12 text-center">
                <h1>Edit Your Profile</h1>
            </div>
            <div style="width:30%; margin:30px auto;">
                <form action="/tenant/<%=data._id%>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" type="text" name="tenant[username]" value="<%=data.username%>">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" name="tenant[email]" value="<%= data.email %>">
                    </div>
                    <div class="form-group">
                        <label>Phone No</label>
                        <input class="form-control" type="text" name="tenant[phoneNo]"  value="<%=data.phoneNo %>">
                    </div>
                    <div class="form-group">
                        <label>Members</label>
                        <input class="form-control" type="number" name="tenant[members]"  value="<%= data.members %>">
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input class="form-control" type="text" name="tenant[income]" value="<%= data.income %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-info btn-block">Submit</button>
                    </div>
                </form>
                <a style="margin-left: 15rem" class="btn btn-primary" href="/tenant/<%=tenant_id%>">Back</a>
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>
