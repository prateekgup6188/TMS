<%- include("./partials/header") %>
    <div class="container">
        <div class="row">
            <div class ="col-md-12 text-center">
                <h1>Edit Your Profile</h1>
            </div>
            <div style="width:30%; margin:30px auto;">
                <form action="/owner/<%=data._id%>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="owner[username]" value="<%= data.username %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="owner[email]" value="<%= data.email %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="owner[phoneNo]"  value="<%= data.phoneNo %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="owner[address]"  placeholder="Address">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-info btn-block">Submit</button>
                    </div>
                </form>
                <a style="margin-left: 15rem;" class="btn btn-primary" href="/owner/<%=data._id%>">Back</a>
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>
