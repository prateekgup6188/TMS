<%- include("./partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Payment Form</h1>

            <% if(typeof alert != 'undefined') { %>
                <% alert.forEach(function(error){ %>
                <div class="container-fluid">
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                        <%= error.msg %>
                    </div>
                </div>
                <% }) %>
                <% } %>

            <div style="width: 50%;margin: 30px auto;">
                <form action="/tenant/<%=data._id%>/pay" method="POST">
                    <div class="form-group">
                        <label> Name on Card </label>
                        <input class="form-control" type="text" name="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label> Card Number </label>
                        <input class="form-control" type="text" name="card_number" placeholder="Card Number">
                    </div>
                    <div class="form-group">
                        <label> Expiry Date </label>
                        <input class="form-control" type="text" name="expiry_date" placeholder="MM/YY">
                    </div>
                    <div class="form-group">
                        <label> CVV</label>
                        <input class="form-control" type="password" name="cvv" placeholder="CVV">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Pay</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include("./partials/footer") %>